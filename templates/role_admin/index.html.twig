{% extends 'base.html.twig' %}

{% block title %}RoleAdmin index{% endblock %}

{% block body %}
    <h1>RoleAdmin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role_admin in role_admins %}
            <tr>
                <td>{{ role_admin.id }}</td>
                <td>{{ role_admin.name }}</td>
                <td>
                    <a href="{{ path('app_role_admin_show', {'id': role_admin.id}) }}">show</a>
                    <a href="{{ path('app_role_admin_edit', {'id': role_admin.id}) }}">edit</a>
                </td>
            </tr>
